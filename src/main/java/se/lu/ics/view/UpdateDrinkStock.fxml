<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Label?>
<?import javafx.geometry.Pos?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="se.lu.ics.controller.StockUpdateController" alignment="CENTER" spacing="20" prefWidth="300" prefHeight="250">

    <Label text="Update Drink Stock" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <HBox alignment="CENTER" spacing="10">
        <TextField fx:id="drinkNameField" promptText="Enter Drink Name" prefWidth="200" minWidth="150" />
    </HBox>

    <HBox alignment="CENTER" spacing="10">
        <TextField fx:id="newDrinkStockField" promptText="Enter New Drink Stock" prefWidth="200" minWidth="150" />
    </HBox>

    <HBox alignment="CENTER" spacing="10">
        <Button fx:id="updateStockButton" text="Update Stock" onAction="#updateDrinkStock" />
    </HBox>

    <HBox alignment="CENTER" spacing="10">
        <Label fx:id="messageLabel" text="" style="-fx-font-size: 14px; -fx-text-fill: red;" />
    </HBox>

    <Button text="Cancel" onAction="#closeDialog" />
</VBox>