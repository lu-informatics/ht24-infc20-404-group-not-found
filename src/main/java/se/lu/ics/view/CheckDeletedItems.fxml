<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="se.lu.ics.controller.CheckDeletedItemsController" spacing="20" alignment="CENTER">
    <Label text="Deleted Items" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <TableView fx:id="deletedItemsTable" prefWidth="400">
        <TableColumn fx:id="itemNoColumn" text="Item No" />
        <TableColumn fx:id="itemIDColumn" text="Item ID" />
        <TableColumn fx:id="itemNameColumn" text="Item Name" />
        <TableColumn fx:id="itemTypeColumn" text="Item Type" />
        <TableColumn fx:id="deletedDateColumn" text="Deleted Date" />
    </TableView>

    <Button text="Close" onAction="#closeWindow" />
</VBox>
