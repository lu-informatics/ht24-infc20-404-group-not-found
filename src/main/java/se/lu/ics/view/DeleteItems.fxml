<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Label?>
<?import javafx.geometry.Pos?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="se.lu.ics.controller.DeleteItemController" alignment="CENTER" spacing="20" prefWidth="300" prefHeight="200">

    <Label text="Delete an Item" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <HBox alignment="CENTER" spacing="10">
        <TextField fx:id="dishNameField" promptText="Enter Dish Name" prefWidth="200" minWidth="150" />
        <Button fx:id="deleteDishButton" text="Delete Dish" onAction="#deleteDish" />
    </HBox>

    <HBox alignment="CENTER" spacing="10">
        <TextField fx:id="drinkNameField" promptText="Enter Drink Name" prefWidth="200" minWidth="150" />
        <Button fx:id="deleteDrinkButton" text="Delete Drink" onAction="#deleteDrink" />
    </HBox>

    <HBox alignment="CENTER" spacing="10">
        <Label fx:id="messageLabel" text="" style="-fx-font-size: 14px; -fx-text-fill: red;" />
    </HBox>

    <Label fx:id="messageLabel" text="Note: Also deletes from receipts!" style="-fx-font-size: 12px; -fx-text-fill: black;" />

    <Button text="Close" onAction="#closeDialog" />

</VBox>
